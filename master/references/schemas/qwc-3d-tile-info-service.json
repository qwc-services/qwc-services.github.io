{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/qwc-services/qwc-3d-tile-info-service/master/schemas/qwc-3d-tile-info-service.json",
  "title": "QWC Mapinfo Service",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "JSON Schema",
      "description": "Reference to JSON schema of this config",
      "type": "string",
      "format": "uri",
      "default": "https://raw.githubusercontent.com/qwc-services/qwc-3d-tile-info-service/master/schemas/qwc-3d-tile-info-service.json"
    },
    "service": {
      "title": "Service name",
      "type": "string",
      "const": "tileinfo"
    },
    "config": {
      "title": "Config options",
      "type": "object",
      "properties": {
        "info_datasets": {
          "type": "object",
          "description": "A dictionary of dataset configurations, keyed by dataset name.",
          "additionalProperties": {
            "type": "object",
            "description": "Dataset configuration.",
            "properties": {
              "dataset": {
                "description": "Dataset resource URI (path to file dataset, DB url for postgres, ...)",
                "type": "string"
              },
              "layername": {
                "description": "Layername in dataset (for postgres, \"schema.tablename\")",
                "type": "string"
              },
              "idfield": {
                "description": "ID field name in dataset layer",
                "type": "string"
              },
              "type": {
                "description": "Dataset type - currently 'gpkg' and 'postgres' are supported",
                "type": "string"
              },
              "attribute_aliases": {
                "type": "object",
                "description": "A dictionary of fieldname aliases, keyed by the field name",
                "additionalProperties": {
                  "type": "string",
                  "description": "Field alias"
                }
              },
              "attribute_blacklist": {
                "type": "array",
                "description": "List of fieldnames to omit from the info response",
                "items": {
                  "type": "string",
                  "description": "Field name"
                }
              },
              "styles": {
                "type": "object",
                "description": "Styles, keyed by style name",
                "additionalProperties": {
                  "type": "object",
                  "description": "Style configuration",
                  "properties": {
                    "query": {
                      "type": "string",
                      "description": "Query to use to read the SLD style from the postgres or gpkg datasets"
                    },
                    "filename": {
                      "type": "string",
                      "description": "Path to a file storing the SLD style"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "service",
    "config"
  ]
}
